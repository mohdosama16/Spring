<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="area" class="usama.triangle">
		<property name="PointA" ref="zerop" />
		<property name="PointB" ref="firstP" />
		<property name="PointC" ref="secP" />
	</bean>
	<bean id="zerop" class="usama.Point">
		<property name="x" value="101"></property>
		<property name="y" value="10"></property>
	</bean>
	<bean id="firstP" class="usama.Point">
		<property name="x" value="10"></property>
		<property name="y" value="20"></property>
	</bean>
	<bean id="secP" class="usama.Point">
		<property name="x" value="20"></property>
		<property name="y" value="30"></property>
	</bean>
</beans>
